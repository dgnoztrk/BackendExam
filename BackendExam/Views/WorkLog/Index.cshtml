@using BackendExam.Application.Shared;
@using BackendExam.ApplicationContract.Dto;
@model Response<IEnumerable<WorkLogDto>>

<div class="container">
    <div class="row mb-3">
        <div class="col-12">
            <a href="/WorkLog/CreateWorkLog" class="btn btn-sm btn-primary float-end">Yeni Çalışma Kaydı Oluştur</a>
        </div>
    </div>
    @{
        if (Model.Success)
        {
            <table class="table table-striped table-hovered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Personel Id</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>Açıklama</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Employee.Name @item.Employee.Surname</td>
                                <td>@item.StartDate</td>
                                <td>@item.EndDate</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
        else
        {
            <text>
                @Model.ErrorMessage
            </text>
        }
    }
</div>